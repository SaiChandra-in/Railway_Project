@model IEnumerable<Project_Railways.Models.SCHEDULE>

@{
    ViewBag.Title = "Train_details";
}

<h2>Train_details</h2>



<div>
    <h4>SCHEDULE</h4><a href="/SCHEDULEs/search" class="btn btn-success">Search</a>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.start_location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.destination_location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_date_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.destination_date_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train.train_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train.train_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train.seat_capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train.general_quota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train.ladies_quota)
            </th>

            <th></th>
        </tr>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.start_location)</td>
                    <td>@Html.DisplayFor(modelItem => item.destination_location)</td>
                    <td>@Html.DisplayFor(modelItem => item.price)</td>
                    <td>@Html.DisplayFor(modelItem => item.start_date_time)</td>
                    <td>@Html.DisplayFor(modelItem => item.destination_date_time)</td>
                    <td>@Html.DisplayFor(modelItem => item.Train.train_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Train.train_id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Train.seat_capacity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Train.general_quota)</td>
                    <td>@Html.DisplayFor(modelItem => item.Train.ladies_quota)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10">No Data Avaliable.</td>
            </tr>
        }

        

    </table>




</div>
<p>

</p>
